<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/candado"
        android:src="@drawable/candado"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/edtPassActual"
        android:ems="10"
        android:id="@+id/edtPassActual"
        android:layout_below="@+id/candado"
        android:layout_toLeftOf="@+id/logo"
        android:layout_toStartOf="@+id/logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/edtNuevaPass"
        android:ems="10"
        android:id="@+id/edtNuevaPass"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edtPassActual"
        android:layout_alignLeft="@+id/edtPassActual"
        android:layout_alignStart="@+id/edtPassActual" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/edtConfiPass"
        android:ems="10"
        android:id="@+id/edtConfirPass"
        android:layout_below="@+id/edtNuevaPass"
        android:layout_alignLeft="@+id/edtNuevaPass"
        android:layout_alignStart="@+id/edtNuevaPass"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAceptar"
        android:id="@+id/btnAceptar"
        android:layout_below="@+id/edtConfirPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>